@using Bucket.Models
@model Group
@Scripts.Render("~/bundles/scripts")
<div class="container">
    <div class="row row-no-margin">
        <div class="location-description">
            <p>
                Here you can add new group.
            </p>
        </div>         
    </div>
    <div class="row row-no-margin location-description">

        @using (Html.BeginForm("Add", "Group", null, FormMethod.Post, null))
        {
            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Group name:</h3>
                        </div>
                        <div class="col-md-9">
                            <input type="text" name="name" id="name" class="form-control name-input" placeholder="Smiths">
                        </div>
                    </div>
                </div>                              
                <hr />
                <div class="container">
                    <div class="row user-list">
                        <div class="col-md-5 user-column">
                            <div>
                                <h5>Start typing to search for people</h5>
                                <hr />
                                <input type="text" name="users" id="people" class="form-control group-input" placeholder="Smiths">
                                <hr />
                            </div>
                            <div id="peopleList">
                                <ul id="loadedPeople" class="list-group">

                                </ul>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <img src="//Images/ic_compare_arrows_black_48dp_1x.png" />
                        </div>
                        <div class="col-md-5 user-column">
                            <h5>People:</h5>
                            <hr />
                            <div id="addedPeople" class="list-group">
                                <ul id="addedPeopleTable"></ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Create group">
        }

    </div>
</div>


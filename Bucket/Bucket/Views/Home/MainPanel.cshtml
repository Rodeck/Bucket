@using Bucket.Models
@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MainPanel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Content/material.js")
    @Styles.Render("~/Content/material.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    
</head>
<body class="main-panel-body">
    @Scripts.Render("~/bundles/scripts")
    <div class="container-fluid">
        <div class="row main-row">
            <!-- Menu --> 
            <div class="col-md-3 menu-col">
                <h3>Welcome, @Model.UserName</h3>
                <hr />
                <ul class="list-group">
                    <li class="list-group-item no-border" data-toggle="collapse" data-target="#groups">
                        <p>
                            Groups
                        </p>
                        <ul id="groups" class="collapse">
                            <li class="list-group-item list-item no-border" id="your-groups">
                                Your groups
                            </li>
                            <li class="list-group-item list-item no-border" id="addGroup">
                                Add group
                            </li>
                        </ul>
                    </li>
                    <li class="list-group-item no-border" data-toggle="collapse" data-target="#lists">
                        <p>
                            Lists
                        </p>
                        <ul id="lists" class="collapse">
                            <li class="list-group-item list-item no-border">
                                Your lists
                            </li>
                            <li class="list-group-item list-item no-border">
                                Add list
                            </li>
                        </ul>
                    </li>
               </ul>
            </div>
            <!-- Content -->
            <div class="col-md-9 content-col">

            </div>
        </div>
    </div>
    
</body>

</html>
